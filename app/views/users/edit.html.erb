<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
	<div class="col-4">

			<div class="gravatar_edit mar_left_avatar ">
			<%= gravatar_for @user %>
			<br/>
			<a class="mar_left_change_avatar" href="http://gravatar.com/emails" target="_blank">change</a>
			</div>

	</div>
	<div class="col-4">

	<%= form_for(@user) do |f| %>

	<%= render 'shared/error_messages' %>
	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-control input_edit' %>
	<%= f.label :email %>
	<%= f.email_field :email, class: 'form-control input_edit' %>
	<%= f.label :password %>
	<%= f.password_field :password, class: 'form-control input_edit' %>
	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation, class: 'form-control input_edit' %>
	<%= f.submit "Save changes", class: "btn btn-primary mar_top input_edit" %>
	<% end %>

	</div>
	<div class="col-4"></div>
</div