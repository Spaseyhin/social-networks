

<center><h1>New Books</h1>

      <%= form_for @book, html: { multipart: true } do |f| %>
      <%= f.text_field :name ,class: "form-control  input_new_pos",placeholder: "Имя"%>

      <%= f.text_field :page,  type: "number",class: "form-control input_new_pos ",placeholder: "Qty. Pages" %>
      <%= f.file_field :attachment ,class: "form-control  custom-file-input-file input_new_pos"%>
      <%= f.file_field :image, class: "form-control  custom-file-input-image input_new_pos"%>


      <%= f.text_area :desc,class: "form-control  input_new_pos", placeholder: "Decsription",rows: 15%>
      <%= f.submit "Publish", class: "btn btn-primary  input_new_pos" %>

<% end %>


   </center>
