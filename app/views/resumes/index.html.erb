

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
   <% @resumes.each do |resume| %>
      <div class="col">
         <div class="card shadow-sm">      
            <%= image_tag(resume.image.thumb.url, alt: 'Image') if resume.image?  %>
            <div class="card-body">
               <h3><%= resume.name %></h3>
               <p><%= link_to "Download Resume", resume.attachment_url %></p>

               <p><%= resume.desc %></p>

               <p>Страниц: <%= resume.page %></p>
               <%= button_to "Delete",  resume, method: :delete, class: "btn btn-primary", confirm: "Are you sure that you wish to delete #{resume.name}?" %>

            </div>
         </div>
            
      </div>

   <% end %>
</div>